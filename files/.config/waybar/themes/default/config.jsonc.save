    "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "custom/power",
        "idle_inhibitor",
        "niri/workspaces",
        "custom/media",
        "niri/window"
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "mpris",
        "pulseaudio",
//        "idle_inhibitor",
        "network",
        "cpu",
        "memory",
        "backlight",
        "keyboard-state",
        "sway/language",
        "battery",
        "power-profiles-daemon",
//        "battery#bat2",
        "tray"        
    ],
